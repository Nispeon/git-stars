<script type="text/javascript">
    document.querySelector('.country-selector').addEventListener('change', function () {
        if(this.value !== ''){
            window.location.href = `{{ path }}?country=${this.value}`
        } else {
            window.location.href = `{{ path }}`
        }
    })

    {% if country != null %}
    document.querySelector('.city-selector').addEventListener('change', function () {
        if(this.value !== ''){
            window.location.href = `{{ path }}?country={{ country.slug }}&city=${this.value}`
        } else {
            window.location.href = `{{ path }}?country={{ country.slug }}`
        }
    })
    {% endif %}
</script>
