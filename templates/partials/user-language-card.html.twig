<div class="col-lg-12 mb-2">
    <div class="member d-flex align-items-center">
        <div class="pic h-100 d-flex justify-content-center">
            <a href="{{ path('languages_show', {'slug' : language.slug}) }}" class="d-flex" title="{{ language.name }}">
                <div class="rounded-circle language-circle" style="background-color: {{ language.color }};"></div>
            </a>
        </div>
        <div class="member-info w-25">
            <h3 class="fs-5 fw-bold">
                <a href="{{ path('languages_show', {'slug' : language.slug}) }}" title="User ranking for {{ language.name }} language">
                    {{ language.name }}
                </a>
            </h3>
            <div class="social">
                <a href="{{ path('languages_show', {'page': '1', 'slug': language.slug}) }}" title="See user ranking for this language"><i class="fas fa-arrow-alt-circle-right"></i></a>
            </div>
        </div>
        <div class="w-25">
            {% if language.rank_world is defined %}
                <p class="fw-bold">Ranking:</p>
                <p>World: {{ language.rank_world }} / {{ language.total_user_world }}</p>
                {% if language.rank_country %}
                    <p>
                        <a href="{{ path('languages_show', {'slug': language.slug })}}?country={{ country.slug }}">{{ get_flag(country.isoCode) }} {{ country.name }}:</a>
                        {{ language.rank_country }} / {{ language.total_user_country }}
                    </p>
                {% endif %}
                {% if language.rank_city %}
                    <p>
                        <a href="{{ path('languages_show', {'slug': language.slug })}}?country={{ country.slug }}&city={{ city.slug }}">{{ city.name }}:</a>
                        {{ language.rank_city }} / {{ language.total_user_city }}
                    </p>
                {% endif %}
                <p>Repositories: {{ language.repositories }}</p>
            {% else %}
                <p class="fw-bold mt-4">Ranking calculation in progress...</p>
            {% endif %}
        </div>
        <div class="w-25">
            <p class="text-end">
                <span class="fw-bold fs-3">{% if language.rank_world is defined %}#{{ language.rank_world }}{% else %}N/A{% endif %}</span><br>
                <span class="fs-6">{{ stars|number_format(0, '.', '&nbsp;')|raw }} <i class="fas fa-star text-warning"></i></span>
            </p>
        </div>
    </div>
</div>