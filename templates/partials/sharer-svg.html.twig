<svg width="450" height="140" viewBox="0 0 450 140" fill="none" xmlns="http://www.w3.org/2000/svg">
    <style> 
        text{
            font: 400 14px 'Segoe UI', Ubuntu, "Helvetica Neue", Sans-Serif;
            fill: #333;
        }
        .fs-14 {
            font-size: 18px;
        }
        .fs-12 {
            font-size: 12px;
        }
        .fw-bold {
            font-weight: bold;
        }
    </style>

    <rect xmlns="http://www.w3.org/2000/svg" data-testid="card-bg" x="0.5" y="0.5" rx="4.5" height="99%" stroke="#e4e2e2" width="449" fill="#fffefe" stroke-opacity="1"/>

    <svg xmlns="http://www.w3.org/2000/svg" x="20" y="-2" viewBox="0 0 450 140" width="40" height="40">
        <path transform="translate(23, 23) scale(0.5,0.5)" d="M493.6,199.5A25.29,25.29,0,0,0,471.7,182L333.6,169.5,278.9,41.6a25.45,25.45,0,0,0-46.8.1L177.5,169.5,39.3,182a25.48,25.48,0,0,0-14.5,44.5l104.4,91.6L98.5,453.7a25.41,25.41,0,0,0,37.8,27.5L255.5,410l119.1,71.2a25.45,25.45,0,0,0,37.9-27.5L381.7,318.1l104.4-91.6A25.45,25.45,0,0,0,493.6,199.5Z" fill="#d9232d"/>
        <path transform="scale(0.5,0.5)" d="M477.4,194.5A25.29,25.29,0,0,0,455.5,177L317.4,164.5,262.7,36.6a25.45,25.45,0,0,0-46.8.1L161.3,164.5,23.1,177A25.48,25.48,0,0,0,8.6,221.5L113,313.1,82.3,448.7a25.41,25.41,0,0,0,37.8,27.5L239.3,405l119.1,71.2a25.45,25.45,0,0,0,37.9-27.5L365.5,313.1l104.4-91.6A25.45,25.45,0,0,0,477.4,194.5Z" fill="#ffc107"/>
    </svg>

    <text class="fs-14 fw-bold">
        <tspan x="50" y="31">Git Stars</tspan>
    </text>

    <text>
        <tspan x="30" y="60">
            Total Stars : <tspan class="fw-bold">{% if globalRanking.stars is defined %}{{ globalRanking.stars|number_format(0, '.', ' ')|raw }}{% else %}Calculation in progress...{% endif %}</tspan>
        </tspan>
    </text>

    <text>
        <tspan x="30" y="90">
            World Ranking : {% if globalRanking.id is defined %}<tspan class="fw-bold">{{ globalRanking.id|number_format(0, '.', ' ')|raw }}</tspan> / {{ totalUsers|number_format(0, '.', ' ')|raw }}{% else %}<tspan class="fw-bold">Calculation in progress...</tspan>{% endif %}
        </tspan>
    </text>

    <text>
        <tspan x="30" y="120">
            Top Language : {% if topLanguage.name is defined %}<tspan class="fw-bold" x="155" y="121">{{ topLanguage.name }}</tspan>{% else %}<tspan class="fw-bold">Calculation in progress...</tspan>{% endif %}
        </tspan>
    </text>

    {% if topLanguage.name is defined %}
    <svg height="20" width="20" x="131" y="106">
        <circle cx="10" cy="10" r="8" stroke="#d8d8d8" stroke-width="1" fill="{{ topLanguage.color }}" />
    </svg>
    {% endif %}

    <svg width="150" height="30" x="295" y="103">
        <rect x="0" y="0" width="150" height="30"/>
        <text x="50%" y="50%" class="fw-bold fs-12" dominant-baseline="middle" text-anchor="middle">@{{ user.username }}</text>
    </svg>

    <image x="325" y="15" href="data:image/jpg;base64,{{ picture }}" height="90" width="90"/>
</svg>
