<svg width="1200" height="600" viewBox="0 0 1200 600" fill="none" xmlns="http://www.w3.org/2000/svg">
    <style>
        .fw-bold{
            font-weight: bold;
        }
    </style>

    <svg xmlns="http://www.w3.org/2000/svg" transform="translate(90,50) scale(0.15,0.15)">
        <path transform="translate(23, 23)" d="M493.6,199.5A25.29,25.29,0,0,0,471.7,182L333.6,169.5,278.9,41.6a25.45,25.45,0,0,0-46.8.1L177.5,169.5,39.3,182a25.48,25.48,0,0,0-14.5,44.5l104.4,91.6L98.5,453.7a25.41,25.41,0,0,0,37.8,27.5L255.5,410l119.1,71.2a25.45,25.45,0,0,0,37.9-27.5L381.7,318.1l104.4-91.6A25.45,25.45,0,0,0,493.6,199.5Z" fill="#d9232d"/>
        <path d="M477.4,194.5A25.29,25.29,0,0,0,455.5,177L317.4,164.5,262.7,36.6a25.45,25.45,0,0,0-46.8.1L161.3,164.5,23.1,177A25.48,25.48,0,0,0,8.6,221.5L113,313.1,82.3,448.7a25.41,25.41,0,0,0,37.8,27.5L239.3,405l119.1,71.2a25.45,25.45,0,0,0,37.9-27.5L365.5,313.1l104.4-91.6A25.45,25.45,0,0,0,477.4,194.5Z" fill="#ffc107"/>
    </svg>

    <text x="180" y="120" class="fw-bold" font-size="70px" fill="black" stroke="none">Git Stars</text>

    <text x="200" y="210" font-size="35px" fill="black" stroke="none">Total Stars</text>

    {% if globalRanking.stars is defined %}
        <text x="230" y="265" class="fw-bold" font-size="40px" fill="black" stroke="none">
            {{ globalRanking.stars|number_format(0, '.', ' ')|raw }}
        </text>
    {% else %}
        <text x="130" y="265" class="fw-bold" font-size="40px" fill="black" stroke="none">
            Calculation in progress...
        </text>
    {% endif %}

    <text x="200" y="340" font-size="35px" fill="black" stroke="none">World Ranking</text>

    {% if globalRanking.rank is defined %}
        <text x="230" y="395" font-size="40px" fill="black" class="fw-bold" stroke="none">
            {{ globalRanking.rank|number_format(0, '.', ' ')|raw }} / {{ totalUsers|number_format(0, '.', ' ')|raw }}
        </text>
    {% else %}
        <text x="130" y="395" font-size="40px" fill="black" class="fw-bold" stroke="none">
            Calculation in progress...
        </text>
    {% endif %}

    <text x="200" y="470" font-size="35px" fill="black" stroke="none">Top Language</text>

    {% if topLanguage.color is defined %}
        <circle cx="250" cy="517" r="20" stroke="#d8d8d8" stroke-width="1" fill="{{ topLanguage.color }}" />
    {% endif %}

    {% if topLanguage.color is defined %}
        <text x="290" y="530" class="fw-bold" font-size="40px" fill="black" stroke="none">{{ topLanguage.name }}</text>
    {% else %}
        <text x="130" y="530" class="fw-bold" font-size="40px" fill="black" stroke="none">Calculation in progress...</text>
    {% endif %}

    <svg viewBox="0 0 1200 600" xmlns="http://www.w3.org/2000/svg">
        <image x="730" y="90" href="data:image/jpg;base64,{{ picture }}" height="360" width="360"/>
        <circle cx="910" cy="270" r="230" stroke="white" stroke-width="100" fill="none" />
    </svg>

    <svg viewBox="-605 -470 600 70" width="600" height="70">
        <!--<rect x="0" y="0" width="600" height="70" fill="red"/>-->
        <text x="50%" y="50%" font-size="35px" class="fw-bold" dominant-baseline="middle" text-anchor="middle" stroke="none">@{{ user.username }}</text>
    </svg>

    <text x="1080" y="575" font-size="25px" fill="#d8d8d8" class="fw-bold" dominant-baseline="middle" text-anchor="middle" stroke="none">git-stars.com</text>
</svg>
